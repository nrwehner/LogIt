@model LogIt.Models.FoodDayItemCreate

@{
    ViewBag.Title = "CreateFoodDayItemFromFoodItem";
}

<h2>Add Food Item</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Pick A Day To Add This Food Item To</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.FoodItemId)
    <div class="form-group">
        @Html.LabelFor(model => model.FoodDayId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("FoodDayId", null, "Select Food Day", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FoodDayId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add Food Item" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Food Item List", "Index","FoodItem")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
